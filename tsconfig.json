{
  "compilerOptions": {
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "vue3-amap": ["src/index.ts"],
      "@/*": ["example/src/*"],
      // https://github.com/qmhc/vite-plugin-dts/blob/main/README.md#type-errors-that-are-unable-to-infer-types-from-packages-in-node_modules
      "@vue/shared": ["node_modules/.pnpm/@vue+shared@3.4.21/node_modules/@vue/shared/dist/shared.esm-bundler.js"],
    },
    "target": "esnext",
    "jsx": "preserve",
    "types": [
      "@types/node",
      "vite/client"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "example/dist"
  ]
}
