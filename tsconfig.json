{
  "compilerOptions": {
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["example/src/*"],
      "~/*": ["src/*"]
    },
    "target": "esnext",
    "jsx": "preserve",
    "types": [
      "@types/node",
      "vite/client",
      "unplugin-turbo-console/client"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "example/dist"
  ]
}
